<div class="form-group">
    <label for="title">Title</label>
    <input type="text" value="<%= event.title %>" id="title" name="title" class="form-control" required>
</div>

<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control" required><%= event.description %></textarea>
</div>

<div class="form-group">
    <label for="date">Date</label>
    <input type="date" id="event_date" name="event_date" value="<%= event.event_date %>" class="form-control" required>
</div>

<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>